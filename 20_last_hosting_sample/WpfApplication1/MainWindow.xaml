<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="625">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Canvas Name="canvas" Background="Black" Grid.ColumnSpan="2">
            <!--<TextBlock Canvas.Left="100" Canvas.Top="100" Text="text" Foreground="White"/>-->
        </Canvas>

        <TextBox Text="{Binding Code}" Grid.Row="1" Margin="0,2,0,-2" AcceptsReturn="True" AcceptsTab="True"/>

        <StackPanel Grid.Column="1" Grid.Row="1">
            <ComboBox SelectedItem="{Binding SelectedLanguage}" ItemsSource="{Binding Languages}" Margin="5" DisplayMemberPath="Name" SelectedValuePath="Name" HorizontalContentAlignment="Center"/>
            <Button Content="Paste Sample Code" Command="{Binding PasteSampleCommand}" Margin="5" />
            <Button Content="Execute" Command="{Binding ExecuteCommand}" Margin="5" />
        </StackPanel>
    </Grid>
</Window>
